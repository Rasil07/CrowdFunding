{
  "name": "crowd-fund",
  "version": "1.0.0",
  "description": "A simple starter kit + crowd funding project made with blockchain netwrok + solidity + truffle and react for frontend.",
  "main": "index.js",
  "author": "Rasil Baidar <rasilgrt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clientPkg": "cd ./client && yarn install",
    "start": "cd ./client && yarn start",
    "compile": "truffle compile",
    "migrate": "truffle migrate --reset",
    "test": "truffle test",
    "pretty": "prettier --write **/*.js **/*.sol"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "ganache-core": "^2.13.2",
    "husky": "4.3.8",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretty && git add ."
    }
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0"
  }
}
